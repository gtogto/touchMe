<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".com.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_width="584dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:text="Touch Me"
            android:textAlignment="center"
            android:textSize="92sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_2"
        android:layout_width="578dp"
        android:layout_height="505dp"
        android:layout_below="@+id/linearLayout_1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo_red"
            android:layout_width="350dp"
            android:layout_height="381dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/ubio_logo" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="660dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="#25fedd"
                    android:gravity="center_horizontal"
                    android:text="ID"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:hint="Email Address" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="#25fedd"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="PW"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="****"
                    android:inputType="textPassword" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_2"
        android:layout_centerHorizontal="true"
        android:text="Log in"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="583dp"
        android:layout_height="365dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/login_btn">

        <TextView
            android:id="@+id/ubio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="230dp"
            android:layout_marginBottom="23dp"
            android:text="UBIO"
            android:textAllCaps="false"
            android:textSize="84sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/ubio_blue"
            android:layout_width="129dp"
            android:layout_height="118dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:src="@drawable/ubio_logo_blue" />

        <TextView
            android:id="@+id/inno_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="168dp"

            android:text="Innovation"
            android:textSize="32sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>



</RelativeLayout>
