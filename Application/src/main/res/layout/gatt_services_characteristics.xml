<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#cdc9c9"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="579dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_device_address"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/device_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_state"
                android:textSize="18sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/connection_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textSize="18sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/sd_scroll"
            android:layout_width="165dp"
            android:layout_height="76dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/send_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:focusableInTouchMode="true"
                android:textSize="20dp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_width="597dp"
        android:layout_height="902dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ubio_logo_black"
            android:layout_width="313dp"
            android:layout_height="197dp"
            android:layout_gravity="center"
            android:src="@drawable/ubio_logo_black">

        </ImageView>

        <Button
            android:id="@+id/setup_btn"
            android:layout_width="406dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#ffefd5"
            android:onClick="onClick"
            android:text="Set-up Device"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/scan_btn"
            android:layout_width="406dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#add8e6"
            android:onClick="onClick"
            android:text="Node Scanning"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/mapping_btn"
            android:layout_width="406dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#66cdaa"
            android:onClick="onClick"
            android:text="Device Mapping"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/report_btn"
            android:layout_width="406dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#e6e6fa"
            android:onClick="onClick"
            android:text="Report/Analysis"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/run_btn"
            android:layout_width="406dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#ffc0cb"
            android:onClick="onClick"
            android:text="RUN"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"></Button>

        <LinearLayout
            android:layout_width="499dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bottom_logo"
                android:layout_width="119dp"
                android:layout_height="89dp"
                android:src="@drawable/ubio_logo"></ImageView>

            <TextView
                android:id="@+id/ubio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UBIO"
                android:textColor="#FFFFFF"
                android:textSize="60sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/inno_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Innovation"
                android:textColor="#ffff00"
                android:textSize="40sp"
                android:textStyle="bold|italic" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>